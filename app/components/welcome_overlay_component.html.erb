<div class="welcome-overlay"
  data-controller="welcome-overlay"
  data-welcome-overlay-audio-url-value="<%= audio_path('penne_for_your_thoughts.mp3') %>"
  <% if redirect_to_shop_tutorial %>
  data-welcome-overlay-shop-url-value="<%= shop_tutorial_url %>"
  <% end %>
  data-action="click->welcome-overlay#dismiss keydown.enter@window->welcome-overlay#dismiss keydown.escape@window->welcome-overlay#dismiss">

  <div class="welcome-overlay__backdrop"></div>

  <%= image_tag "banner-bg-glow.webp", class: "welcome-overlay__bg-glow" %>

  <div class="welcome-overlay__content">
    <!-- Star decorations with glow -->
    <div class="welcome-overlay__star welcome-overlay__star--top-left" data-welcome-overlay-target="star">
      <%= image_tag "overlay-star-2.webp", class: "welcome-overlay__star-icon" %>
    </div>
    <div class="welcome-overlay__star welcome-overlay__star--top-right" data-welcome-overlay-target="star">
      <%= image_tag "overlay-star-2.webp", class: "welcome-overlay__star-icon" %>
    </div>
    <div class="welcome-overlay__star welcome-overlay__star--bottom-left" data-welcome-overlay-target="star">
      <%= image_tag "overlay-star-1.webp", class: "welcome-overlay__star-icon" %>
    </div>
    <div class="welcome-overlay__star welcome-overlay__star--bottom-right" data-welcome-overlay-target="star">
      <%= image_tag "overlay-star-1.webp", class: "welcome-overlay__star-icon" %>
    </div>

    <!-- Welcome banner image -->
    <div class="welcome-overlay__banner" data-welcome-overlay-target="banner">
      <%= image_tag "welcome.png", alt: "Welcome to Flavortown!", class: "welcome-overlay__image" %>
    </div>

    <p class="welcome-overlay__hint" data-welcome-overlay-target="hint">Click to continue...</p>
  </div>
</div>
