<div class="simple-shop-item-card">
  <div class="simple-shop-item-card__image">
    <%= image_tag image_url, alt: "#{name} image", class: "rounded-lg w-full h-auto object-scale-down aspect-square max-h-48" %>
  </div>
  <div class="simple-shop-item-card__content">
    <h4 class="simple-shop-item-card__title"><%= name %></h4>
    <div class="simple-shop-item-card__description"><%= description %></div>
  </div>
</div>
