<% content_for :title, "Users" %>
<h1>Users</h1>

<%= form_with url: helper_users_path, method: :get, local: true, class: "form-basic" do %>
  <%= text_field_tag :query, params[:query],
    placeholder: "Search users by name...",
    autocomplete: "off",
    class: "input-primary" %>
  <%= submit_tag "Search", class: "btn-primary slim" %>
<% end %>

<% if @users.any? %>
  <table class="table-data">
    <thead>
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Banned</th>
        <th>Verified</th>
        <th>Projects</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |u| %>
        <tr>
          <td><%= u.id %></td>
          <td><%= u.display_name %></td>
          <td><%= u.banned? ? "✅ Banned" : "❌ Not banned" %></td>
          <td><%= u.verification_status.titleize %></td>
          <td><%= pluralize(u.projects.size, "project") %></td>
          <td><%= link_to "View", helper_user_path(u), class: "btn-primary slim" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>No users found.</p>
<% end %>

<% if @pagy.pages > 1 %>
  <div class="pagination"><%== @pagy.series_nav %></div>
<% end %>

<%= link_to "← Back", helper_root_path, class: "btn-secondary", style: "margin-top: 1rem;" %>
