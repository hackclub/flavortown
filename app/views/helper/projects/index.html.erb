<% content_for :title, "Projects" %>
<h1>Projects</h1>

<div class="tabs" style="margin-bottom: 1rem;">
  <%= link_to "Active", helper_projects_path(filter: "active", query: params[:query]),
    class: "btn-#{@filter == 'active' ? 'primary' : 'secondary'} slim" %>
  <%= link_to "Deleted", helper_projects_path(filter: "deleted", query: params[:query]),
    class: "btn-#{@filter == 'deleted' ? 'primary' : 'secondary'} slim" %>
  <%= link_to "All", helper_projects_path(filter: "all", query: params[:query]),
    class: "btn-#{@filter == 'all' ? 'primary' : 'secondary'} slim" %>
</div>

<%= form_with url: helper_projects_path, method: :get, local: true, class: "form-basic" do %>
  <%= hidden_field_tag :filter, @filter %>
  <%= text_field_tag :query, params[:query],
    placeholder: "Search projects...",
    autocomplete: "off",
    class: "input-primary" %>
  <%= submit_tag "Search", class: "btn-primary slim" %>
<% end %>

<% if @projects.any? %>
  <table class="table-data">
    <thead>
      <tr>
        <th>ID</th>
        <th>Title</th>
        <th>Description</th>
        <th>Status</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @projects.each do |p| %>
        <tr>
          <td><%= p.id %></td>
          <td><%= p.title %></td>
          <td><%= truncate(p.description, length: 60) %></td>
          <td>
            <% if p.deleted? %>
              <span class="badge badge-danger">Deleted</span>
            <% else %>
              <span class="badge badge-success">Active</span>
            <% end %>
          </td>
          <td><%= link_to "View", helper_project_path(p), class: "btn-primary slim" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>No projects found.</p>
<% end %>

<% if @pagy.pages > 1 %>
  <div class="pagination"><%== @pagy.series_nav %></div>
<% end %>

