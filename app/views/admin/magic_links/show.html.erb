<div class="card">
  <h2>Magic Link for <%= @user.display_name %></h2>

  <div class="info-rows">
    <div>
      <b>Magic Link URL:</b>
      <div style="margin-top: 0.5rem; padding: 1rem; background: #f3f4f6; border-radius: 0.375rem; word-break: break-all;">
        <%= @magic_link_url %>
      </div>
    </div>

    <div style="margin-top: 1rem;">
      <b>Expires at:</b> <%= @user.magic_link_token_expires_at.strftime("%Y-%m-%d %H:%M:%S") %>
    </div>

    <div style="margin-top: 1rem;">
      <%= button_to "Copy Link", "#",
          class: "btn-primary",
          onclick: "navigator.clipboard.writeText('#{@magic_link_url}'); this.textContent = 'Copied!'; setTimeout(() => this.textContent = 'Copy Link', 2000); return false;" %>
    </div>
  </div>

  <div style="margin-top: 1.5rem;">
    <%= link_to "â† Back to User", admin_user_path(@user), class: "btn-secondary" %>
  </div>
</div>
