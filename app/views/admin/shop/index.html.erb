<h1>Manage Shop</h1>

<div style="margin-bottom: 1rem;">
  <%= link_to "New Product", new_admin_shop_item_path, class: "btn-primary" %>
  <%= button_to "Clear Carousel Cache", admin_clear_carousel_cache_path, method: :post, class: "btn-secondary", style: "display: inline-block; margin-left: 0.5rem;" %>
</div>

<h2>Last 20 Items</h2>
<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Type</th>
      <th>Ticket Cost</th>
      <th>USD Cost</th>
      <th>Enabled</th>
      <th>Created</th>
    </tr>
  </thead>
  <tbody>
    <% @shop_items.each do |item| %>
      <tr>
        <td><%= link_to item.id, admin_shop_item_path(item) %></td>
        <td><%= link_to item.name, admin_shop_item_path(item) %></td>
        <td><%= item.type %></td>
        <td><%= item.ticket_cost %></td>
        <td><%= item.usd_cost %></td>
        <td><%= item.enabled ? "✓" : "✗" %></td>
        <td><%= item.created_at.strftime("%Y-%m-%d %H:%M") %></td>
      </tr>
    <% end %>
  </tbody>
</table>
