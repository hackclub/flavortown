<div class="info-rows">
  <div><b>Name:</b> <%= address["first_name"] %> <%= address["last_name"] %></div>
  <div><b>Address Line 1:</b> <%= address["line_1"] %></div>
  <% if address["line_2"].present? %>
    <div><b>Address Line 2:</b> <%= address["line_2"] %></div>
  <% end %>
  <div><b>City:</b> <%= address["city"] %></div>
  <div><b>State/Province:</b> <%= address["state"] %></div>
  <div><b>Postal Code:</b> <%= address["postal_code"] %></div>
  <div><b>Country:</b> <%= address["country"] %></div>
  <% if address["phone_number"].present? %>
    <div><b>Phone:</b> <%= address["phone_number"] %></div>
  <% else %>
    <div><b>Phone:</b> N/A</div>
  <% end %>
</div>
