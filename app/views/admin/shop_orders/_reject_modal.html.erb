<dialog id="reject-modal">
  <h2>Reject Order #<%= order.id %></h2>

  <%= form_with url: reject_admin_shop_order_path(order), method: :post, local: true do |f| %>
    <div style="margin-bottom: 1rem;">
      <%= f.label :reason, "Rejection Reason" %>
      <%= f.text_area :reason, placeholder: "Enter reason for rejection...", rows: 4, style: "width: 100%; padding: 0.5rem; border: 1px solid #e5e7eb; border-radius: 4px;" %>
    </div>

    <div style="display: flex; gap: 1rem; justify-content: flex-end;">
      <button type="button" onclick="document.getElementById('reject-modal').close()" class="btn-secondary">Cancel</button>
      <%= f.submit "Reject Order", class: "btn-danger" %>
    </div>
  <% end %>
</dialog>
