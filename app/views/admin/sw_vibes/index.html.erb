<%= render HeadingComponent.new(title: "SW Vibes", tone: :blue, size: :full) %>
<h2 class="warning">Shipwright Vibolytics</h2>

<% if @error %>
  <div class="card error-card">
    <p><%= @error %></p>
  </div>
<% elsif @data.present? %>
  <div class="sw-vibes-container">
    <div class="card">
      <div class="card__header">
        <h2>Current Status</h2>
        <div class="status-badge <%= @data[:bool] ? 'status-good' : 'status-bad' %>">
          <%= @data[:bool] ? 'Good' : 'Bad' %>
        </div>
      </div>

      <div class="card__content">
        <div class="metric-section">
          <h3>Quote of the Day</h3>
          <blockquote>
            "<%= @data[:quote_otd] || 'u tell me' %>"
          </blockquote>
        </div>

        <div class="metric-section">
          <h3>Recommendation</h3>
          <p class="recommendation"><%= @data[:recommendation] || 'idk man' %></p>
        </div>
      </div>
      <p class="text-muted">- I'll add more soon. this is AI generated so take it with a grain of salt.</p>
    </div>
  </div>
<% else %>
  <div class="card">
    <p>nun yet</p>
  </div>
<% end %>

<style>
  .warning {
    text-align: center;
    font-weight: normal;
    font-size: 1.2rem;
    margin: 0 0 2rem 0;
  }

  .sw-vibes-container {
    display: flex;
    flex-direction: column;
    gap: 2em;
  }

  .card__header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1rem;
  }

  .card__header h2 {
    margin: 0;
  }

  .status-badge {
    padding: 0.5rem 1rem;
    border-radius: 0.5rem;
    font-weight: bold;
    font-size: 1.1rem;
  }

  .status-good {
    background-color: #d4edda;
    color: #155724;
  }

  .status-bad {
    background-color: #f8d7da;
    color: #721c24;
  }

  .metric-section {
    margin-bottom: 1.5rem;
  }

  .metric-section h3 {
    border-bottom: 2px solid #eee;
    padding-bottom: 0.5rem;
    margin-bottom: 1rem !important;
  }

  blockquote {
    border-left: 4px solid #444;
    padding-left: 1rem;
    color: #555;
    font-style: italic;
    font-size: 1.1rem;
    margin: 0;
  }

  .recommendation {
    font-size: 1rem;
    color: #333;
    line-height: 1.6;
  }

  .error-card {
    border-left: 0.5em solid #444;
  }

  .error-card h3 {
    color: #333;
    margin-top: 0;
  }

  .placeholder-card {
    border-left: 0.5em solid #ccc;
  }

  .placeholder-card h3 {
    color: #856404;
    margin-top: 0;
  }

  .placeholder-card ul {
    color: #666;
    margin-top: 1rem;
  }

  .text-muted {
    color: #6c757d;
    font-size: 0.9rem;
  }
</style>
