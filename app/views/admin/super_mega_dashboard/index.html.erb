                  var labels = days.map(function(d) {
                    var p = d.date.split('-'); return parseInt(p[1]) + '/' + parseInt(p[2]);
                  });
                  var pointColors = rawValues.map(function(v) {
                    if (v === null) return 'transparent';
                    if (v >= 0.7) return '#22c55e';
                    if (v >= 0.4) return '#f59e0b';
                    return '#ef4444';
                  });

