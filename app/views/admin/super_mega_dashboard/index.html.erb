            </div>
          </div>
          <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
          <script>
            document.addEventListener('DOMContentLoaded', function() {
              const ctx = document.getElementById('supportVibesChart');
              if (!ctx) return;

              const vibesData = <%= raw(@support_vibes_history.map { |d| { x: d[0].strftime('%b %-d'), y: d[1].to_f } }.to_json) %>;
              const labels = vibesData.map(d => d.x);
              const values = vibesData.map(d => d.y);

              new Chart(ctx, {
                type: 'line',
                data: {
                  labels: labels,
                  datasets: [{
                    label: 'Overall Sentiment',
                    data: values,
                    borderColor: '#10b981',
                    backgroundColor: 'rgba(16, 185, 129, 0.1)',
                    fill: true,
                    tension: 0.3,
                    pointRadius: 4,
                    pointBackgroundColor: '#10b981'
                  }]
                },
                options: {
                  responsive: true,
                  plugins: {
                    legend: { display: false }
                  },
                  scales: {
                    y: {
                      beginAtZero: true,
                      min: -1,
                      max: 1,
                      title: { display: false }
                    },
                    x: {
                      title: { display: false },
                      ticks: {
                        callback: function(value, index, ticks) {
                          return index % 3 === 0 ? this.getLabelForValue(value) : '';
                        },
                        minRotation: 45,
                        maxRotation: 45
                      }
                    }
                  }
                }
              });
            });
          </script>
        </div>
      </div>
    <% end %>

