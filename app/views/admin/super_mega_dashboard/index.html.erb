                <div id="history-popup-list" class="sw-vibes-history">
                  <h4>SW Vibes history</h4>
                  <div id="history-popup-cards" class="sw-vibes-history__cards">
                    <p class="sw-vibes-history__empty">Loading...</p>
                  </div>
                </div>
                <div id="history-popup-detail" class="sw-vibes-history-detail" style="display: none;">
                  <button type="button" class="sw-vibes-history-detail__back">&larr; Back</button>
                  <div id="history-popup-detail-content"></div>
                </div>
              </div>
            </div>

            <script>
              document.addEventListener('DOMContentLoaded', function() {
                function escapeHtml(str) {
                  return String(str)
                    .replace(/&/g, '&amp;')
                    .replace(/</g, '&lt;')
                    .replace(/>/g, '&gt;')
                    .replace(/"/g, '&quot;')
                    .replace(/'/g, '&#39;');
                }

                function buildDetailHtml(s) {
                  var payload = s.payload || {};
                  var positive = payload.positive || {};
                  var reason = escapeHtml(positive.reason || s.reason || '');
                  var dateText = escapeHtml(s.date || '');
                  var sentimentPct = s.sentiment != null ? Math.round(s.sentiment * 100) + '%' : '—';
                  var html = '<h4>' + dateText + ' — Sentiment: ' + sentimentPct + '</h4><p>' + (reason || '—') + '</p>';
                  var quotes = payload.quotes || [];
                  if (quotes.length) {
                    html += '<h4>Quotes</h4><ul class="sw-vibes-popup__quotes">';
                    quotes.forEach(function(q) {
                      html += '<li><blockquote>' + escapeHtml(q.text || '') + '</blockquote><p>' + escapeHtml(q.reason || '') + '</p></li>';
                    });
                    html += '</ul>';
                  }
                  var suggestion = payload.suggestion;
                  if (suggestion) {
                    html += '<h4>Suggestion</h4><p>' + escapeHtml(suggestion.action || '') + '</p><p><strong>Why:</strong> ' + escapeHtml(suggestion.reason || '') + '</p>';
                  }
                  return html;
                }

                function showDayDetail(entry, parentPopupId) {
                  var historyPopup = document.getElementById('history-popup');
                  var graphPopup = document.getElementById('sw-vibes-graph-popup');
                  historyPopup.style.display = 'flex';
                  if (graphPopup) graphPopup.style.display = 'none';
                  document.getElementById('history-popup-detail-content').innerHTML = buildDetailHtml(entry);
                  document.getElementById('history-popup-list').style.display = 'none';
                  document.getElementById('history-popup-detail').style.display = 'block';
                  historyPopup.setAttribute('data-came-from', parentPopupId || '');
                }

                window._swVibesChartDays = [];
                window._swVibesDataLoaded = false;
                window._swVibesDataLoading = false;

                function loadSwVibesData(callback) {
                  if (window._swVibesDataLoaded) { callback(window._swVibesHistoryData); return; }
                  if (window._swVibesDataLoading) { return; }
                  window._swVibesDataLoading = true;
                  fetch('/admin/super_mega_dashboard/sw_vibes_history_data')
                    .then(function(r) { return r.json(); })
                    .then(function(data) {
                      window._swVibesHistoryData = data;
                      window._swVibesDataLoaded = true;
                      window._swVibesDataLoading = false;
                      callback(data);
                    })
                    .catch(function() { window._swVibesDataLoading = false; });
                }

                function smoothData(values, windowSize) {
                  var smoothed = [];
                  for (var i = 0; i < values.length; i++) {
                    if (values[i] === null) { smoothed.push(null); continue; }
                    var sum = 0, count = 0;
                    for (var j = Math.max(0, i - windowSize + 1); j <= i; j++) {
                      if (values[j] !== null) { sum += values[j]; count++; }
                    }
                    smoothed.push(count > 0 ? sum / count : null);
                  }
                  return smoothed;
                }

                function renderSentimentChart(historyData) {
                  var canvas = document.getElementById('swVibesHistoryChart');
                  if (!canvas || typeof Chart === 'undefined') return;
                  var byDate = {};
                  historyData.forEach(function(d) { byDate[d.date] = d; });
                  var days = [];
                  for (var i = 29; i >= 0; i--) {
                    var dt = new Date(); dt.setDate(dt.getDate() - i);
                    var iso = dt.toISOString().slice(0, 10);
                    days.push({ date: iso, entry: byDate[iso] || null });
                  }
                  window._swVibesChartDays = days;

                  var rawValues = days.map(function(d) { return d.entry ? d.entry.sentiment : null; });
                  var smoothedValues = smoothData(rawValues, 3);
                  var withData = rawValues.filter(function(v) { return v !== null; });
                  var avg = withData.length > 0 ? (withData.reduce(function(a, b) { return a + b; }, 0) / withData.length) : 0;
                  var min = withData.length > 0 ? Math.min.apply(null, withData) : 0;
                  var max = withData.length > 0 ? Math.max.apply(null, withData) : 0;
                  var latest = withData.length > 0 ? withData[withData.length - 1] : null;

                  var summaryEl = document.getElementById('sw-vibes-summary');
