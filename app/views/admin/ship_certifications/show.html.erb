<%= link_to "‚Üê Back to Queue", admin_ship_certifications_path, class: "btn-secondary", style: "margin-bottom: 1rem; display: inline-block;" %>

<h1><%= @project.title %></h1>

<!-- Status Banner -->
<% if @project.ship_status == "approved" %>
  <div class="alert alert--success" style="margin-bottom: 1rem;">
    <strong>‚úì Approved</strong>
    <% if @ship_certification.persisted? %>
      by <%= @ship_certification.reviewer&.display_name || "Unknown" %>
      on <%= @ship_certification.decided_at&.strftime("%b %d, %Y at %l:%M%p") %>
    <% end %>
    <% if @ship_certification.feedback.present? %>
      <br><em>"<%= @ship_certification.feedback %>"</em>
    <% end %>
  </div>
<% elsif @project.ship_status == "rejected" %>
  <div class="alert alert--danger" style="margin-bottom: 1rem;">
    <strong>‚úó Rejected</strong>
    <% if @ship_certification.persisted? %>
      by <%= @ship_certification.reviewer&.display_name || "Unknown" %>
      on <%= @ship_certification.decided_at&.strftime("%b %d, %Y at %l:%M%p") %>
    <% end %>
    <% if @ship_certification.feedback.present? %>
      <br><em>"<%= @ship_certification.feedback %>"</em>
    <% end %>
  </div>
<% end %>

<!-- Project Context Card -->
<div class="card" style="margin-bottom: 1rem;">
  <div class="flex" style="flex-wrap: wrap; gap: 1rem; align-items: flex-start;">
    <!-- Left: Project Info -->
    <div style="flex: 2; min-width: 300px;">
      <div class="info-rows">
        <div style="margin-bottom: 0.5rem;">
          <span class="pill pill-<%= @project.ship_status == 'submitted' ? 'yellow' : (@project.ship_status == 'under_review' ? 'blue' : (@project.ship_status == 'approved' ? 'green' : 'red')) %>">
            <%= @project.ship_status.humanize %>
          </span>
          <% if @project.project_type.present? %>
            <span class="pill pill-gray"><%= @project.project_type.humanize %></span>
          <% end %>
        </div>
        <div><b>Author:</b>
          <% @project.users.each do |user| %>
            <%= link_to user.display_name || user.email, admin_user_path(user) %>
          <% end %>
        </div>
        <div><b>Created:</b> <%= @project.created_at.strftime("%b %d, %Y") %></div>
        <div><b>Shipped:</b> <%= @project.shipped_at ? @project.shipped_at.strftime("%b %d, %Y") : "‚Äî" %></div>
        <div><b>Devlogs:</b> <%= @project.devlogs.count %></div>
        <div><b>Time:</b> <%= @project.time.hours %>h <%= @project.time.minutes %>m</div>
        <% if @ship_certification.persisted? && @ship_certification.reviewer.present? %>
          <div><b>Reviewer:</b> <%= @ship_certification.reviewer.display_name %></div>
        <% end %>
      </div>
    </div>

    <!-- Right: Action Links -->
    <div style="flex: 1; min-width: 200px;">
      <p style="font-size: 0.85rem; color: #666; margin-bottom: 0.5rem;"><b>Review these before deciding:</b></p>
      <div style="display: flex; flex-direction: column; gap: 0.5rem;">
        <% if @project.demo_url.present? %>
          <%= link_to @project.demo_url, target: "_blank", rel: "noopener", class: "btn-primary" do %>
            üåê Open Demo
          <% end %>
        <% end %>
        <% if @project.repo_url.present? %>
          <%= link_to @project.repo_url, target: "_blank", rel: "noopener", class: "btn-primary" do %>
            üîó View Repository
          <% end %>
        <% end %>
        <%= link_to project_path(@project), target: "_blank", class: "btn-secondary" do %>
          üëÅÔ∏è View Project Page
        <% end %>
      </div>
    </div>
  </div>
</div>

<!-- Description Card -->
<div class="card" style="margin-bottom: 1rem;">
  <h2>description</h2>
  <p style="font-size: 1rem; line-height: 1.6; max-height: 200px; overflow-y: auto;"><%= @project.description || "No description provided" %></p>
</div>

<!-- Screenshot Card -->
<% if @project.banner.attached? %>
  <div class="card" style="margin-bottom: 1rem;">
    <h2>screenshot</h2>
    <%= image_tag @project.banner.variant(:card), style: "width: 100%; max-height: 300px; object-fit: cover; border-radius: 0.5rem;" %>
  </div>
<% end %>

<!-- Decision Section -->
<% if @project.ship_status.in?(%w[under_review submitted]) %>
  <div class="card" style="margin-bottom: 1rem;">
    <h2>make your decision</h2>

    <% if @project.ship_status == "submitted" %>
      <div style="background: var(--color-tan-400); border: 2px solid var(--color-brown-500); border-radius: 0.5em; padding: 1.5rem; text-align: center;">
        <p style="font-size: 1.1rem; margin-bottom: 1rem;"><strong>‚ö†Ô∏è This project is awaiting review.</strong></p>
        <p style="margin-bottom: 1rem;">Click below to assign yourself as the reviewer.</p>
        <%= button_to "Start Review",
            start_review_admin_project_ship_certification_path(@project),
            method: :post,
            class: "btn-primary",
            style: "font-size: 1.1rem; padding: 1rem 3rem;",
            data: { turbo_confirm: "Start reviewing this project?" } %>
      </div>
    <% else %>
      <!-- Review Checklist -->
      <div style="background: var(--color-tan-400); border: 1px solid var(--color-brown-500); border-radius: 0.5em; padding: 1rem; margin-bottom: 1.5rem;">
        <p style="font-weight: 600; margin-bottom: 0.75rem;">Before deciding, confirm you have reviewed:</p>
        <div style="display: flex; flex-wrap: wrap; gap: 1rem;">
          <label style="display: flex; align-items: center; gap: 0.5rem; cursor: pointer;">
            <input type="checkbox" id="check_demo" style="width: 1.25rem; height: 1.25rem;">
            <span>Demo/Live project</span>
          </label>
          <label style="display: flex; align-items: center; gap: 0.5rem; cursor: pointer;">
            <input type="checkbox" id="check_repo" style="width: 1.25rem; height: 1.25rem;">
            <span>Repository/Code</span>
          </label>
          <label style="display: flex; align-items: center; gap: 0.5rem; cursor: pointer;">
            <input type="checkbox" id="check_desc" style="width: 1.25rem; height: 1.25rem;">
            <span>Description</span>
          </label>
        </div>
        <p style="font-size: 0.8rem; color: #666; margin-top: 0.75rem;">You are verifying that this project works as intended and meets shipping guidelines.</p>
      </div>

      <!-- Reviewer Info -->
      <p style="font-size: 0.9rem; margin-bottom: 1rem;">
        <b>Reviewing as:</b> <%= current_user.display_name %>
      </p>

      <!-- Decision Buttons -->
      <div class="som-decision-grid">
        <!-- Approve -->
        <div class="som-decision-section som-decision-approve">
          <h3 style="color: #065f46;">‚úì Approve</h3>
          <%= form_with url: approve_admin_project_ship_certification_path(@project), method: :post, local: true do |f| %>
            <label for="approve_feedback" style="font-weight: 600; display: block; margin-bottom: 0.5rem;">Feedback for author (optional)</label>
            <%= f.text_area :feedback,
                id: "approve_feedback",
                rows: 3,
                class: "som-textarea",
                placeholder: "Great work! Your project looks awesome..." %>
            <%= f.submit "‚úì Approve Project",
                class: "btn-primary",
                style: "font-size: 1rem; padding: 0.75rem 1.5rem; width: 100%; background: #10b981; border-color: #10b981;",
                data: { turbo_confirm: "Approve this project?" } %>
          <% end %>
        </div>

        <!-- Reject -->
        <div class="som-decision-section som-decision-reject">
          <h3 style="color: #991b1b;">‚úó Reject</h3>
          <%= form_with url: reject_admin_project_ship_certification_path(@project), method: :post, local: true do |f| %>
            <label for="reject_feedback" style="font-weight: 600; display: block; margin-bottom: 0.5rem;">Reason for rejection (required)</label>
            <%= f.text_area :feedback,
                id: "reject_feedback",
                rows: 3,
                class: "som-textarea",
                placeholder: "Please explain why...",
                required: true %>

            <%= f.submit "‚úó Reject Project",
                class: "btn-danger",
                style: "font-size: 1rem; padding: 0.75rem 1.5rem; width: 100%;",
                data: { turbo_confirm: "Reject this project?" } %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
<% end %>

