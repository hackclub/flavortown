<h1>users</h1>

<%= form_with url: admin_users_path, method: :get, local: true, class: "form-basic" do %>
  <%= text_field_tag :query, params[:query],
    placeholder: "Search users by name or email...",
    autocomplete: "off",
    class: "input-primary" %>

  <%= submit_tag "Search",
    class: "btn-primary slim" %>
<% end %>

<% if @users.any? %>
  <table class="table-data">
    <thead>
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Email</th>
        <th>Role(s)</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.id %></td>
          <td><%= user.display_name %></td>
          <td><%= user.email %></td>
          <td><%= user.roles.pluck(:name).join(", ") %></td>
          <td>
            <%= link_to "View", "/admin/users/#{user.id}", class: "btn-primary slim" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>No users found.</p>
<% end %>

<div class="pagination">
  <% if @page > 1 %>
    <%= link_to "Previous", admin_users_path(page: @page - 1, query: params[:query]) %>
  <% end %>

  <% (1..@total_pages).each do |p| %>
    <%= link_to p, admin_users_path(page: p, query: params[:query]) %>
  <% end %>

  <% if @page < @total_pages %>
    <%= link_to "Next", admin_users_path(page: @page + 1, query: params[:query]) %>
  <% end %>
</div>

<%= link_to "Go back", "/admin", class: "btn-primary" %>
