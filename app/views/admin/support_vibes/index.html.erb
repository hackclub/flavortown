<%= render HeadingComponent.new(title: "Support Vibes", tone: :blue, size: :full) %>
<h2 class="warning">this data was generated using ai analysis so take it with a grain of salt or smth kthxbye</h2>

<%= button_to "✨ DO DA VIBE CHECK ✨", admin_support_vibes_path, method: :post, class: "btn-primary" %>

<div class="support-vibes-trend-graph">
  <h3>Support Vibes Trend</h3>
  <div class="support-vibes-graph">
    <canvas id="supportVibesChart" height="200"></canvas>
  </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
  document.addEventListener('DOMContentLoaded', function() {
    const ctx = document.getElementById('supportVibesChart');
    if (!ctx) return;

    const vibesData = <%= raw(@support_vibes_history.map { |d| { x: d[0].strftime('%b %-d'), y: d[1].to_f } }.to_json) %>;
    const labels = vibesData.map(d => d.x);
    const values = vibesData.map(d => d.y);

    new Chart(ctx, {
      type: 'line',
      data: {
        labels: labels,
        datasets: [{
          label: 'Overall Sentiment',
          data: values,
          borderColor: '#10b981',
          backgroundColor: 'rgba(16, 185, 129, 0.1)',
          fill: true,
          tension: 0.3,
          pointRadius: 4,
          pointBackgroundColor: '#10b981'
        }]
      },
      options: {
        responsive: true,
        plugins: {
          legend: { display: false }
        },
        scales: {
          y: {
            beginAtZero: true,
            min: -1,
            max: 1,
            title: { display: false }
          },
          x: {
            title: { display: false },
            ticks: {
              callback: function(value, index, ticks) {
                return index % 3 === 0 ? this.getLabelForValue(value) : '';
              },
              minRotation: 45,
              maxRotation: 45
            }
          }
        }
      }
    });
  });
</script>

<% if @vibes.any? %>
  <div class="vibe-feed">
    <% @vibes.each do |vibe| %>
      <%
        rating_color = case vibe.rating
          when 'high' then 'green'
          when 'medium' then 'orange'
          when 'low' then 'red'
          else 'gray'
        end
      %>

      <div class="card" style="border-left: 0.5em solid <%= rating_color %>;">
        <div class="card__header">
          <div class="card__header--left">
            <h2 style="margin: 0; font-size: 1.5rem;">
              <%= vibe.period_end.strftime("%B %d, %Y") %>
              <span class="badge"><%= vibe.rating&.upcase %> VIBES</span>
            </h2>
            <small class="text-muted">
              Analyzing <%= vibe.period_start.strftime("%H:%M") %> - <%= vibe.period_end.strftime("%H:%M") %>
            </small>
          </div>
          <div class="card__header--right">
            <div style="font-size: 1.25rem; %>">
              <%= vibe.overall_sentiment %> Sentiment
            </div>
            <small class="text-muted"><%= vibe.sentiment_label %></small>
          </div>
        </div>

        <div class="card__content">
          <div class="concerns-section">
            <h3>Top 5 Concerns</h3>
            <div class="concerns-list">
              <% (vibe.concerns || []).each do |concern| %>
                <div class="concern-item">
                  <% if concern.is_a?(Hash) %>
                    <h4><%= concern["title"] %></h4>
                    <p><%= concern["description"] %></p>
                  <% else %>
                    <p><%= concern %></p>
                  <% end %>
                </div>
              <% end %>
            </div>
          </div>

          <div class="questions-section">
            <h3>Prominent Questions</h3>
            <% vibe.notable_quotes.presence.each do |q| %>
              <div class="question-item">
                <blockquote>
                  "<%= q %>"
                </blockquote>
              </div>
            <% end %>

            <% if vibe.respond_to?(:unresolved_queries) && vibe.unresolved_queries.present? %>
              <div class="unresolved-section">
                <h3>Still Unresolved Queries</h3>
                <div class="unresolved-grid">
                  <% vibe.unresolved_queries.each do |category, questions| %>
                    <div class="unresolved-category">
                      <h4><%= category %></h4>
                      <ul>
                        <% Array(questions).each do |q| %>
                          <li><%= q %></li>
                        <% end %>
                      </ul>
                    </div>
                  <% end %>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% else %>
  <div class="card">
    <p>No vibes checked yet. Be the first to check the vibes!</p>
  </div>
<% end %>

