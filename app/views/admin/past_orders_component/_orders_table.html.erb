<table style="width: 100%; border-collapse: collapse; font-size: 0.75rem;">
  <thead>
    <tr style="border-bottom: 1px solid #e5e7eb;">
      <th style="padding: 0.25rem; text-align: left; font-weight: 600; color: #6b7280;">Order #</th>
      <th style="padding: 0.25rem; text-align: left; font-weight: 600; color: #6b7280;">Item</th>
      <th style="padding: 0.25rem; text-align: left; font-weight: 600; color: #6b7280;">Status</th>
      <th style="padding: 0.25rem; text-align: left; font-weight: 600; color: #6b7280;">Created</th>
      <th style="padding: 0.25rem; text-align: left; font-weight: 600; color: #6b7280;">Cost</th>
    </tr>
  </thead>
  <tbody>
    <% orders.each do |order| %>
      <tr style="border-bottom: 1px solid #f3f4f6;">
        <td style="padding: 0.25rem;">
          <%= link_to "##{order.id}", admin_shop_order_path(order), style: "text-decoration: none; color: #3b82f6;" %>
        </td>
        <td style="padding: 0.25rem; color: #6b7280;">
          <%= truncate(order.shop_item.name, length: 20) %>
        </td>
        <td style="padding: 0.25rem;">
          <span class="badge badge-<%= order.aasm_state %>" style="font-size: 0.65rem; padding: 0.1rem 0.3rem;">
            <%= order.aasm_state.humanize %>
          </span>
        </td>
        <td style="padding: 0.25rem; color: #6b7280;">
          <%= order.created_at.strftime("%m/%d") %>
        </td>
        <td style="padding: 0.25rem; color: #6b7280;">
          <%= order.total_cost %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
