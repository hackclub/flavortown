<div class="shop-item-edit">
  <div class="shop-item-edit__header">
    <div class="shop-item-edit__title-row">
      <h1>Edit Shop Item</h1>
      <div class="shop-item-edit__meta">
        <code class="shop-item-edit__id">#<%= @shop_item.id %></code>
        <span class="shop-item-edit__type"><%= @shop_item.type.to_s.gsub("ShopItem::", "") %></span>
      </div>
    </div>
    <p class="shop-item-edit__name"><%= @shop_item.name %></p>
  </div>

  <%= render 'form', shop_item: @shop_item %>

  <div class="shop-item-edit__back">
    <%= link_to "â† Back to Item", admin_shop_item_path(@shop_item), class: "btn-secondary" %>
  </div>
</div>

