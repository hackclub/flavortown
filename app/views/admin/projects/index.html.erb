<h1>Project Search</h1>

<%= form_with url: admin_projects_path, method: :get, local: true do %>
  <%= text_field_tag :query, params[:query],
    placeholder: "Search projects by title or other meta info...",
    autocomplete: "off",
    class: "input-primary" %>

  <%= submit_tag "Search", class: "btn-primary slim" %>
<% end %>

<% if @projects.any? %>
  <table class="table-data">
    <thead>
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Description</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @projects.each do |project| %>
        <tr>
          <td><%= project.id %></td>
          <td><%= project.title %></td>
          <td><%= project.description %></td>
          <td>
            <%= link_to "View", "/admin/projects/#{project.id}", class: "btn-primary slim" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>No projects found.</p>
<% end %>

<div class="pagination">
  <% if @page > 1 %>
    <%= link_to "Previous", admin_projects_path(page: @page - 1, query: params[:query]) %>
  <% end %>

  <% (1..@total_pages).each do |p| %>
    <%= link_to p, admin_projects_path(page: p, query: params[:query]) %>
  <% end %>

  <% if @page < @total_pages %>
    <%= link_to "Next", admin_projects_path(page: @page + 1, query: params[:query]) %>
  <% end %>
</div>

<%= link_to "Go back", "/admin", class: "btn-primary" %>
