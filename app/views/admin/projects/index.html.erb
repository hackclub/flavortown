<h1>Project Search</h1>

<div class="tabs" style="margin-bottom: 1rem;">
  <%= link_to "Active", admin_projects_path(filter: "active", query: params[:query]),
    class: "btn-#{@filter == 'active' ? 'primary' : 'secondary'} slim" %>
  <%= link_to "Deleted", admin_projects_path(filter: "deleted", query: params[:query]),
    class: "btn-#{@filter == 'deleted' ? 'primary' : 'secondary'} slim" %>
  <%= link_to "All", admin_projects_path(filter: "all", query: params[:query]),
    class: "btn-#{@filter == 'all' ? 'primary' : 'secondary'} slim" %>
</div>

<%= form_with url: admin_projects_path, method: :get, local: true do %>
  <%= hidden_field_tag :filter, @filter %>
  <%= text_field_tag :query, params[:query],
    placeholder: "Search projects by title or other meta info...",
    autocomplete: "off",
    class: "input-primary" %>

  <%= submit_tag "Search", class: "btn-primary slim" %>
<% end %>

<% if @projects.any? %>
  <table class="table-data">
    <thead>
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Description</th>
        <th>Status</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @projects.each do |project| %>
        <tr>
          <td><%= project.id %></td>
          <td><%= project.title %></td>
          <td><%= truncate(project.description, length: 60) %></td>
          <td>
            <% if project.deleted? %>
              <span class="badge badge-danger">Deleted</span>
            <% else %>
              <span class="badge badge-success">Active</span>
            <% end %>
          </td>
          <td>
            <%= link_to "View", admin_project_path(project), class: "btn-primary slim" %>
            <% if project.deleted? %>
              <%= button_to "Restore", restore_admin_project_path(project), method: :post, class: "btn-secondary slim" %>
            <% else %>
              <%= button_to "Delete", delete_admin_project_path(project), method: :post, class: "btn-danger slim", data: { confirm: "Are you sure you want to delete this project?" } %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>No projects found.</p>
<% end %>

<% if @pagy.pages > 1 %>
  <div class="pagination">
    <%== @pagy.series_nav %>
  </div>
<% end %>

<%= link_to "Go back", "/admin", class: "btn-primary" %>
