<div class="start-flow__card">
  <div class="start-flow__ribbon">
    <%= inline_svg_tag "icons/star_fill.svg" %>
  </div>

  <div class="start-flow__card-header">
    <h2>Chef Profile</h2>
  </div>

  <%= form_with url: "/start/display_name", method: :post, class: "start-flow__form", local: true do |f| %>
    <div class="start-flow__field">
      <%= render InputComponent.new(
        label: "Display Name",
        placeholder: "Chef Ratatouille",
        form: f,
        attribute: :display_name,
        color: :green,
        subtitle: "This is how you'll appear to other chefs.",
        input_html: {
          value: @display_name,
          maxlength: 80,
          required: true,
          autofocus: true
        }
      ) %>
    </div>

    <div class="start-flow__field" style="margin-top: var(--space-xxxl);">
      <%= render InputComponent.new(
        label: "Email",
        placeholder: "chef@example.com",
        form: f,
        attribute: :email,
        color: :red,
        subtitle: "We’ll never sell your information. We’ll only use it to send you updates and identify your account.",
        input_html: {
          value: @email,
          type: :email,
          maxlength: 255,
          required: true
        }
      ) %>
    </div>

    <div class="start-flow__actions start-flow__actions--center" style="margin-top: var(--space-l);">
      <%= render ButtonComponent.new(
        text: "Submit",
        color: :brown,
        type: :submit,
        icon: "icons/tick.svg"
      ) %>
    </div>
  <% end %>
</div>
