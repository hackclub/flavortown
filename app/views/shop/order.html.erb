<div class="shop-order">
    <div class="shop-order__back">
        <%= render ButtonComponent.new(
            text: "â† Back to the Shop",
            href: "/shop",
            color: :brown,
            variant: :borderless
        ) %>
    </div>
    <div class="shop-order__content">
        <div class="shop-order__view">
            <div class="shop-order__image">
                <%= image_tag image_url("playdate.webp"), loading: "lazy", decoding: "async" %>   
            </div>
            <h2>Playdate</h2>
            <h3>Play some games or something why you asking me</h3>
        </div>
        <div class="shop-order__details">
            <h2>Complete your order:</h2>
            <div class="shop-order__cookies">
                <h3>Price:</h3>
                <h3>ğŸª 1000</h3>
            </div>
            <div class="shop-order__quantity">
                <%= form_with url: shop_order_path, method: :post, local: true do |form| %>
                    <%= render InputComponent.new(
                    label: "Quantity",
                    placeholder: 1,
                    form: form,
                    attribute: :quantity,
                    color: :green,
                    as: :number_field,
                    input_html: { min: 1, max: 10, step: 1, value: 1 }
                    ) %>
                <% end %>
                <h6>Maximum <span id="shop-order__max">10</span> items per order.</h6>
            </div>
            <div class="shop-order__address">
                <%= render DropdownComponent.new(
                label: "Shipping Address",
                options: ["My House", "My Other House"],
                selected_option: "My House",
                color: :green
                ) %>
                <h4>My House</h4>
                <a href="identity.hackclub.com">Manage addresses</a>
            </div>
            <div class="shop-order__summary">
                <h3>Order Summary</h3>
                <div class="shop-order__summary-price">
                    <h4>Price:</h4>
                    <h4>ğŸª 1000</h4>
                </div>
                <div class="shop-order__summary-qty">
                    <h4>Quantity:</h4>
                    <h4>1</h4>
                </div>
                <div class="shop-order__summary-total">
                    <h4>Total:</h4>
                    <h4>ğŸª 1000</h4>
                </div>
            </div>
            <div class="shop-order__balance">Current balance: <span id="shop-order__curr-bal">ğŸª 1000</span></div>
            <%= render ButtonComponent.new(
                text: "Get!",
                href: "/shop/my_orders",
                color: :brown,
                variant: :borderless
            ) %>
        </div>
    </div>
</div>