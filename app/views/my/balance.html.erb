<%= turbo_frame_tag "balance_history" do %>
  <div class="balance-history">
    <h1>My Balance: üç™ <%= current_user.balance %></h1>
    <p></p>

    <% if @balance.any? %>
      <table class="balance-history__table">
        <thead>
          <tr>
            <th>Amount</th>
            <th>Date</th>
          </tr>
        </thead>
        <tbody>
          <% @balance.each do |entry| %>
            <tr>
              <td class="<%= entry.amount >= 0 ? 'balance-history__amount--positive' : 'balance-history__amount--negative' %>">
                <%= entry.amount >= 0 ? '+' : '' %><%= entry.amount %>
              </td>
              <td class="balance-history__date">
                <%= entry.created_at.strftime('%b %d, %Y') %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <p>No transactions yet</p>
    <% end %>
  </div>
<% end %>
