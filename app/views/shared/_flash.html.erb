<% if flash.any? %>
  <div class="flash-container">
    <% flash.each do |type, message| %>
      <% variant = case type.to_s
        when "notice", "success" then "success"
        when "alert", "error", "danger" then "error"
        else "info"
      end %>
      <div class="alert alert-<%= variant %>" role="alert" aria-live="assertive" data-controller="flash" data-flash-timeout-value="5000">
        <span class="alert__icon" aria-hidden="true">
          <% if variant == "success" %>
            <%= inline_svg_tag "icons/checked.svg", aria: { hidden: true }, focusable: "false" %>
          <% elsif variant == "error" %>
            <%= inline_svg_tag "icons/delete.svg", aria: { hidden: true }, focusable: "false" %>
          <% else %>
            <%= inline_svg_tag "icons/info.svg", aria: { hidden: true }, focusable: "false" %>
          <% end %>
        </span>
        <div class="alert__content"><%= message %></div>
        <button type="button" class="alert__close" aria-label="Close" title="Close" data-action="click->flash#close">
          <%= inline_svg_tag "icons/close.svg", aria: { hidden: true }, focusable: "false" %>
        </button>
      </div>
    <% end %>
  </div>
<% end %>
