<div class="section hero">
  <%= inline_svg_tag "landing/hero/flag-orpheus-top.svg", class: "orph-flag" %>

  <div class="login-btn">
    <%= form_tag "/auth/slack", method: :post, data: {turbo: false} do %>
      <button class="btn btn--red btn--striped">
        <div>
          <%= image_tag "mask/enter.webp", width: 20, height: 20 %>
          Sign in!
        </div>
      </button>
    <% end %>
    <% if current_user&.admin? %>
      <%= link_to "/admin", class: "btn-striped-red is_admin" do %>
        <div>Admin</div>
      <% end %>
    <% end %>
  </div>

  <div class="top-collab">
    <%= image_tag "landing/hero/hc-gh-collab.webp" %>
  </div>

  <div class="rsvp-container">
    <%= image_tag "landing/hero/logo.webp" %>
    <h3>Cook tasty projects. Win tasty prizes.</h3>

    <%= render "rsvp_form", rsvp: Rsvp.new %>

    <h4>For ages 13 to 18. Ends September 30, 2025.</h4>
    <h5>Over 18? Earn the same prizes by <a href="https://docs.google.com/document/d/1xiAoYrO6wY1knzZhI1TFYVqCo6q2R7A46he0w5tan90/edit?tab=t.0" target="_blank">getting teens to sign up</a></h5>
  </div>

  <%= image_tag "landing/hero/long-image.webp", class: "hero-art" %>
</div>
