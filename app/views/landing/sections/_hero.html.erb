<div class="section hero">
  <%= inline_svg_tag "landing/hero/flag-orpheus-top.svg", class: "orph-flag" %>

<%
=begin
%>
 <div class="login-btn">
    <%= form_tag "/auth/hack_club", method: :post, data: { turbo: false } do %>
      <button class="btn btn--red btn--striped">
        <div>
          <%= image_tag image_url("mask/enter.avif"), width: 20, height: 20 %>
          Sign in!
        </div>
      </button>
    <% end %>

    <% if current_user&.admin? %>
      <%= link_to "/admin", class: "btn-striped-red is_admin" do %>
        <div>Admin</div>
      <% end %>
    <% end %>
  </div>
<%
=end
%>

  <div class="top-collab">
    <%= image_tag image_url("landing/hero/hc-gh-collab.avif"), loading: "lazy", decoding: "async" %>
  </div>

  <div class="rsvp-container">
    <%= image_tag image_url("landing/hero/logo.avif"), loading: "eager", decoding: "async", sizes: "(max-width: 600px) 160px, 240px", fetchpriority: "high" %>
    <h3>
      Cook personal projects. Win free prizes.
    </h3>

    <%= render "rsvp_form", rsvp: Rsvp.new %>

    <h4>Ages 13-18. Starts <u>December 22nd</u>.</h4>

    <!-- <h5>Over 18? Earn the same prizes by <a class="no-underline" href="https://docs.google.com/document/d/1xiAoYrO6wY1knzZhI1TFYVqCo6q2R7A46he0w5tan90/edit?tab=t.0" target="_blank">getting teens to sign up</a></h5> -->

    <%= image_tag image_url("icons/chevrons-red-down.svg"), class: "carat", size: 48 %>
  </div>

  <%= image_tag image_url("landing/hero/long-image.avif"), class: "hero-art", loading: "eager", decoding: "async", fetchpriority: "high", sizes: "100vw" %>
</div>
