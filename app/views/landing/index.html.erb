<%= content_for :stylesheets do %>
  <%= stylesheet_link_tag "landing", "data-turbo-track": "reload" %>
<% end %>

<div class="section section-1">
  <%= inline_svg_tag "landing/section-1/flag-orpheus-top.svg", class: "orph-flag" %>

  <div class="login-btn">
    <%= dev_tool do %>
      <%= form_tag "/auth/slack", method: :post, data: {turbo: false} do %>
        <button class="btn-striped-red">
          <div>
            <%= image_tag "mask/enter.png", width: 20, height: 20 %>
            Sign in!
          </div>
        </button>
      <% end %>
    <% end %>
  </div>

  <div class="hero">
    <!-- TODO: som-style hero image? -->
  </div>

  <div class="rsvp-container">
    <%= image_tag "landing/section-1/drawing.png" %>
    <%= render "rsvp_form", rsvp: Rsvp.new %>
  </div>
</div>

<div class="section section-2">
  <div class="title-overlay">
    <div class="ribbon ribbon-title title">How this works</div>
  </div>

  <div class="step left">
    <div class="step-card">
        <div class="ribbon step-count">Step 1</div>

        <div class="hero">
          <%= image_tag "landing/section-2/step-1-img.png" %>
          <div class="title">Cook a real tasty project!</div>
        </div>

        <p>A website, game, hardware, anything to show off your skills</p>
    </div>
  </div>

  <div class="step center">
    <div class="step-card">
        <div class="ribbon step-count">Step 2</div>

        <div class="hero">
          <%= image_tag "landing/section-2/step-2-img.png" %>
          <div class="title">Rate your fellow hackers!</div>
        </div>

        <p>Rate projects and receive a rating on your own</p>
    </div>
  </div>

  <div class="step right">
    <div class="step-card">
        <div class="ribbon step-count">Step 3</div>

        <div class="hero">
          <%= image_tag "landing/section-2/step-3-img.png" %>
          <div class="title">Win prizes!</div>
        </div>

        <p>Win prizes that you can use to cook your next incredible feast</p>
    </div>
  </div>
</div>

