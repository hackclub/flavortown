<div class="prize">
  <div class="image-wrapper">
    <%= resp_prize_images(prize) %>
  </div>
  <div class="description">
    <div class="name"><%= prize[:name] %></div>
    <%= prize[:hours_estimated] >= 500 ? ">500 hours" : "~#{prize[:hours_estimated]} #{"hour".pluralize(prize[:hours_estimated])}" %>
  </div>
</div>
